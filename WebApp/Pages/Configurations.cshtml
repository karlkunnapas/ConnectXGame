@page
@model WebApp.Pages.Configurations
@{
    ViewData["Title"] = "Configurations";
}

<div class="content-card">
    <h2><i class="bi bi-gear me-2"></i>Game Configurations</h2>
    
    @if (Model.Configs.Any())
    {
        @foreach (var conf in Model.Configs)
        {
            <div class="config-item">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="config-title">@conf.Value.Item2</div>
                        <div class="config-details">
                            <span class="config-badge">
                                <i class="bi bi-hash me-1"></i>#@conf.Key
                            </span>
                        </div>
                    </div>
                    <div class="actions">
                        <a asp-page="./EditConfiguration" asp-route-id="@conf.Value.Item1" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </a>
                        <a asp-page="./DeleteConfiguration" asp-route-id="@conf.Value.Item1" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <div class="icon"><i class="bi bi-sliders"></i></div>
            <h4>No configurations</h4>
            <p>Create a configuration to customize your game settings!</p>
            <a asp-page="./EditConfiguration" class="btn btn-success">
                <i class="bi bi-plus-lg me-1"></i>New Configuration
            </a>
        </div>
    }
</div>

<div class="d-flex gap-2 mt-3">
    <a asp-page="./Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Home
    </a>
    <a asp-page="./EditConfiguration" class="btn btn-success">
        <i class="bi bi-plus-lg me-1"></i>New Configuration
    </a>
</div>