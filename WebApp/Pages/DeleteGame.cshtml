@page
@model WebApp.Pages.DeleteGame
@{
    ViewData["Title"] = "Delete Game";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="delete-card">
            <div class="text-center mb-4">
                <div class="warning-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h2><i class="bi bi-trash me-2"></i>Delete Game</h2>
                <p class="text-muted">Are you sure you want to delete this saved game?</p>
            </div>
            
            <div class="mb-4">
                <h4>Game Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        Game Name
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Game.GetName()
                    </dd>
                    <dt class="col-sm-4">
                        Player 1
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Game.GetPlayer1Name()
                    </dd>
                    <dt class="col-sm-4">
                        Player 2
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Game.GetPlayer2Name()
                    </dd>
                    <dt class="col-sm-4">
                        Board Size
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Game.GetConfiguration().BoardWidth x @Model.Game.GetConfiguration().BoardHeight
                    </dd>
                </dl>
            </div>
            
            <form method="post">
                <input type="hidden" name="id" value="@Model.Game.Id" />
                <div class="d-flex gap-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-page="./SavedGames" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>