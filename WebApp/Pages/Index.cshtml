@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section">
    <h1><i class="bi bi-circle-fill text-danger me-2"></i>ConnectX<i class="bi bi-circle-fill text-primary ms-2"></i></h1>
    <p>A customizable Connect Four game</p>
</div>

<!-- Menu Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <a asp-page="./NewGame" class="menu-card new-game">
            <div class="icon">
                <i class="bi bi-plus-lg"></i>
            </div>
            <h3>New Game</h3>
            <p>Start a fresh game with custom settings</p>
        </a>
    </div>
    <div class="col-md-4">
        <a asp-page="./SavedGames" class="menu-card saved-games">
            <div class="icon">
                <i class="bi bi-save"></i>
            </div>
            <h3>Saved Games</h3>
            <p>Continue your previous games</p>
        </a>
    </div>
    <div class="col-md-4">
        <a asp-page="./Configurations" class="menu-card configurations">
            <div class="icon">
                <i class="bi bi-gear"></i>
            </div>
            <h3>Configurations</h3>
            <p>Manage configurations</p>
        </a>
    </div>
</div>

<!-- Quick Stats -->
<div class="row g-4">
    <div class="col-md-6">
        <div class="content-card">
            <h2><i class="bi bi-controller me-2"></i>Recent Games</h2>
            @if (Model.Games.Any())
            {
                @foreach (var game in Model.Games.Take(3))
                {
                    <div class="game-item">
                        <div class="game-title">@game.Value.Item2</div>
                        <div class="actions">
                            <a asp-page="./GamePlay" asp-route-id="@game.Value.Item1" class="btn btn-sm btn-primary">
                                <i class="bi bi-play-fill me-1"></i>Continue
                            </a>
                        </div>
                    </div>
                }
                <a asp-page="./SavedGames" class="btn btn-outline-primary mt-2">
                    <i class="bi bi-list me-1"></i>View All Games
                </a>
            }
            else
            {
                <div class="empty-state">
                    <div class="icon"><i class="bi bi-inbox"></i></div>
                    <h4>No saved games yet</h4>
                    <p>Start a new game to begin playing!</p>
                    <a asp-page="./NewGame" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>New Game
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="col-md-6">
        <div class="content-card">
            <h2><i class="bi bi-sliders me-2"></i>Available Configurations</h2>
            @if (Model.Configurations.Any())
            {
                @foreach (var conf in Model.Configurations.Take(3))
                {
                    <div class="config-item">
                        <div class="config-title">@conf.Value.Item2</div>
                    </div>
                }
                <a asp-page="./Configurations" class="btn btn-outline-primary mt-2">
                    <i class="bi bi-list me-1"></i>View All Configurations
                </a>
            }
            else
            {
                <div class="empty-state">
                    <div class="icon"><i class="bi bi-sliders"></i></div>
                    <h4>No configurations yet</h4>
                    <p>Create a configuration to customize your games!</p>
                    <a asp-page="./EditConfiguration" class="btn btn-success">
                        <i class="bi bi-plus-lg me-1"></i>New Configuration
                    </a>
                </div>
            }
        </div>
    </div>
</div>
