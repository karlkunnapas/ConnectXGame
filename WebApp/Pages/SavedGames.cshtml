@page
@model WebApp.Pages.SavedGames
@{
    ViewData["Title"] = "Saved Games";
}

<div class="content-card">
    <h2><i class="bi bi-save me-2"></i>Saved Games</h2>
    
    @if (Model.Games.Any())
    {
        @foreach (var game in Model.Games)
        {
            <div class="game-item">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="game-title">@game.Value.Item2</div>
                        <div class="game-info">
                            <i class="bi bi-hash me-1"></i>Game #@game.Key
                        </div>
                    </div>
                    <div class="actions">
                        <a asp-page="./GamePlay" asp-route-id="@game.Value.Item1" class="btn btn-primary btn-sm">
                            <i class="bi bi-play-fill me-1"></i>Continue
                        </a>
                        <a asp-page="./DeleteGame" asp-route-id="@game.Value.Item1" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <div class="icon"><i class="bi bi-inbox"></i></div>
            <h4>No saved games</h4>
            <p>You haven't saved any games yet. Start a new game to begin playing!</p>
            <a asp-page="./NewGame" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i>New Game
            </a>
        </div>
    }
</div>

<div class="d-flex gap-2 mt-3">
    <a asp-page="./Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Home
    </a>
    <a asp-page="./NewGame" class="btn btn-success">
        <i class="bi bi-plus-lg me-1"></i>New Game
    </a>
</div>